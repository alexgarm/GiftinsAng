@{
    Layout = "_Layout.cshtml";
}
@section Head {
    @RenderSection("Head", required: false)
}
<div class="container-fluid">
    <partial name="_AuthorizedNavPartial" />
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    @await RenderSectionAsync("LeftColumn", required: false)
                </div>
                <div id="content-wrapper" class="col-8">
                    <div class="row">
                        <div class="col-12">
                            @await RenderSectionAsync("ContentMenu", required: true)
                        </div>
                    </div>
                    <div class="row mt-3 mb-3">
                        <div class="col-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    @await RenderSectionAsync("RightColumn", required: false)
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @RenderSection("Scripts", required: false)
}