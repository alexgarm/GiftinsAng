<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Html.Raw(ViewBag.Title ?? "Giftin")</title>
@RenderSection("Head", required: false)
<environment include="Development">
    <link rel="stylesheet" href="~/dist/core.css" />
    <link rel="stylesheet" href="~/dist/app.css" asp-append-version="true" />
</environment>
<environment exclude="Development">
    <link rel="stylesheet" href="~/dist/core.min.css" />
    <link rel="stylesheet" href="~/dist/app.min.css" asp-append-version="true" />
</environment>
</head>
<body>
    @RenderBody()
<environment include="Development">
    <script src="~/dist/core.js"></script>
    <script src="~/dist/app.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/dist/core.min.js"></script>
    <script src="~/dist/app.min.js" asp-append-version="true"></script>
</environment>
@RenderSection("Scripts", required: false)
</body>
</html>
