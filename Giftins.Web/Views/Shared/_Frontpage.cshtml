@{
    Layout = $"_Layout.cshtml";
    ViewBag.ShowOffer = ViewBag.ShowOffer ?? false;
}
@section Head {
    @RenderSection("Head", required: false)
}
<div class="container-fluid">
    <nav id="top-nav" class="navbar navbar-expand-md transparent">
        <div class="container">
            <div class="col-12 col-md-2">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navTopContent" aria-controls="navTopContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fa fa-bars"></span>
                </button>
                <a class="navbar-brand font-weight-bold" href="/"><img src="~/img/logo.png" /></a>
            </div>
            <div class="col-12 col-md-10">
                <div class="row">
                    <div id="navTopContent" class="collapse navbar-collapse">
                        <partial name="_FrontpageNavPartial" />
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="d-none d-md-block col-md-3 h-100">
                @{
                    if (ViewBag.ShowOffer)
                    {
                        <div class="row align-items-center h-100">
                            <div class="offset-2 col-8">
                                <h4>For whom you want</h4>
                                <h4>to choose gift</h4>
                                <br />
                                <p><span style="font-size: 125%">Women</span> <span class="fa fa-circle fa-2x"></span></p>
                                <p><span style="font-size: 125%">Man</span> <span class="fa fa-circle fa-2x"></span></p>
                                <br />
                                <p><button class="btn btn-primary">Enter</button></p>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="col-12 col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @RenderSection("Scripts", required: false)
}